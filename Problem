//Create a program that will accept integer values for month,
//day, and year and then output the “long version” of the
//specified date.

#include <iostream>
#include <cmath>
#include <string>
#include <conio.h>

using namespace std; 

int main ()
{
	int day, month, year; 
	
	cout << "Enter Month: ";
		cin >> month;
	cout << "Enter Day: ";
		cin >> day;
	cout << "Enter Year: ";
		cin >> year;
	if (month == 1 && day <=31)
		cout << "January " << day << ", " << year; 
	else if (month == 2 && day <=28)
		cout << "Febuary " << day << ", " << year;	
	else if (month == 3 && day <=31)
		cout << "March " << day << ", " << year; 
	else if (month == 4 && day <=30)
		cout << "April " << day << ", " << year;
	else if (month == 5 && day <=31)
		cout << "May " << day << ", " << year;
	else if (month == 6 && day <=30)
		cout << "June " << day << ", " << year;
	else if (month == 7 && day <=31)
		cout << "July " << day << ", " << year;
	else if (month == 8 && day <=31)
		cout << "August " << day << ", " << year;
	else if (month == 9 && day <=30)
		cout << "September " << day << ", " << year;
	else if (month == 10 && day <=31)
		cout << "October " << day << ", " << year;
	else if (month == 11 && day <=30)
		cout << "November " << day << ", " << year;
	else if (month == 12 && day <=31)
		cout << "December " << day << ", " << year;
	else 
	 	cout << "Invalid Date!"; 
	_getch();
	return 0;
}
